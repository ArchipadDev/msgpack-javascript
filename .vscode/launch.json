// For configurations:
// https://code.visualstudio.com/Docs/editor/debugging
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run the current Mocha test file",
            "type": "node",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "runtimeArgs": [],
            "args": [
                "--colors",
                "${relativeFile}"
            ],
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Run the current TypeScript file",
            "type": "node",
            "request": "launch",
            "internalConsoleOptions": "openOnSessionStart",
            "args": [
                "${relativeFile}"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}"
        },
    ]
}
